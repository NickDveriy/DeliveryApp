{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist/js",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": false
    },
    "lib": [
        "es2015"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/types/*.ts",
        "node_modules",
        ".vscode"
    ]
}